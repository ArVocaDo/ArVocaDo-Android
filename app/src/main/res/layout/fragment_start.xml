<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/start_fragment"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.learning.StartFragment">

    <Button
        android:id="@+id/btnBackDown"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/btn_back_down"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/ivAvocado"
        android:layout_width="79dp"
        android:layout_height="99dp"
        android:background="@drawable/btn_abo_study"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@id/tvLearningMain"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tvLearningMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/colorShadow"
        android:shadowRadius="10"
        android:shadowDx="10.0"
        android:shadowDy="10.0"
        android:text="안녕, 친구야!\n우리 **단어를\n공부 해볼까?"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:fontFamily="@font/cookie_run_b"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintVertical_bias="0.56"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btnLearningStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintTop_toBottomOf="@id/tvLearningMain"
        android:background="@drawable/btn_start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>