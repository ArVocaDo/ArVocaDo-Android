<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.learning.ArcoreActivity">

    <Button
        android:id="@+id/ar_end"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="350dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="right"
        android:background="@drawable/btn_green"
        android:fontFamily="@font/cookie_run_b"
        android:text="나가기"
        android:textSize="20dp"/>

    <fragment
        android:id="@+id/ux_fragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </fragment>

    <ImageView
        android:id="@+id/ar_icon"
        android:layout_width="50dp"
        android:layout_height="63dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/btn_abo_study"/>

    <TextView
        android:id="@+id/ar_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:padding="5dp"
        android:text=" 하얀 점이 나타날 때까지 스마트폰을 천천히 움직여 바닥을 비추어보세요 "
        android:background="@drawable/white_dailog_background"
        android:fontFamily="@font/cookie_run_b"
        android:textSize="20dp"
        android:textColor="@color/colorBrown"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/ar_word"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:visibility="invisible"
        android:background="@drawable/yellow_dialog_background"
        android:text="word"
        android:fontFamily="@font/cookie_run_b"
        android:textSize="40dp"
        android:textColor="@color/colorBlack"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="280dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/ar_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ARvocado"
        android:fontFamily="@font/nanum_square_round_b"
        android:textSize="13dp"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="76dp"
        app:layout_constraintTop_toTopOf="parent"/>
</FrameLayout>